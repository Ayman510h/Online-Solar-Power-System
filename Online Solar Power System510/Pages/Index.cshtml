@page
@model IndexModel

<h2 style="text-align:center;">Solar Products</h2>

<div style="width:60%; margin:auto;">

    <div style="text-align:right; margin-bottom:10px;">
        <a href="/Insert">
            <button style="padding:8px 15px;">Add New Product</button>
        </a>
    </div>

    <table border="1" width="100%" cellpadding="8" style="border-collapse:collapse; text-align:center;">
        <tr style="background-color:#f2f2f2;">
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a href="/Update?id=@item.Id">Edit</a> |
                    <a href="/Delete?id=@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>

</div>
