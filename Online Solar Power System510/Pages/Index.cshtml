@page
@model IndexModel

<h2 class="text-center my-4">☀ Solar Products</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-page="/Insert" class="btn btn-success">
        ➕ Add New Product
    </a>
</div>

<table class="table table-bordered table-hover text-center">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Price ($)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a asp-page="/Update" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-page="/Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
